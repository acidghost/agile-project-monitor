.row
  .col-xs-12
    .panel.panel-blue
      .panel-heading
        .panel-title
          h5 Projects
      .panel-body
        .row(ng-repeat='project in app.projects')
          .col-xs-9
            dl.dl-horizontal
              dt ID
              dd {{ project.id }}
              dt Name
              dd {{ project.name }}
              dt Start
              dd {{ project.start | date }}
              dt End
              dd {{ project.end | date }}
              dt Iteration size
              dd {{ project.size }}
              dt Estimations unit
              dd {{ project.unit }}
          .col-xs-3
            a.btn.btn-default.btn-xs(ui-sref='project({ id: project.id })')
              i.fa.fa-eye &nbsp;
              | Show
          .col-xs-12
            hr(ng-show='$index < app.projects.length - 1')

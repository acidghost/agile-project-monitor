.row
  .col-xs-12
    .panel.panel-blue
      .panel-heading
        .panel-title
          .row
            .col-xs-9
              h5 Project {{ project.project.id }}
            .col-xs-3
              a.btn.btn-xs.btn-default.pull-right(ui-sref='home')
                i.fa.fa-chevron-left.fa- &nbsp;
                | Back
      .panel-body
        .row
          .col-xs-12
            dl.dl-horizontal
              dt Name
              dd {{ project.project.name }}
              dt Start
              dd {{ project.project.start | date }}
              dt End
              dd {{ project.project.end | date }}
              dt Iteration size
              dd {{ project.project.size }}
              dt Estimations unit
              dd {{ project.project.unit }}
        .panel.panel-blue
          .panel-heading
            .panel-title
              h6 Iterations
          .panel-body
            .row(ng-repeat='iteration in project.iterations')
              .col-xs-9
                dl.dl-horizontal
                  dt ID
                  dd {{ iteration.id }}
                  dt Period
                  dd {{ iteration.start | date }} - {{ iteration.end | date }}
              .col-xs-3
                a.btn.btn-default.btn-xs(ui-sref='iteration({ id: iteration.id })')
                  i.fa.fa-eye &nbsp;
                  | Show
              .col-xs-12
                hr(ng-show='$index < project.iterations.length - 1')
